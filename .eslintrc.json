{
  "extends": ["airbnb-base", "plugin:prettier/recommended"],
  "env": {
    "jest": true
  },
  "globals": {
    "BigInt": true
  },
  "rules": {
    "no-shadow": ["error", { "allow": ["_"] }],
    "no-restricted-syntax": [
      "error",
      "ForInStatement",
      "LabeledStatement",
      "WithStatement"
    ]
  }
}
